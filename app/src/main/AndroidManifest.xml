            android:name=".SveVoznjeActivity"
            android:label="Sve vožnje" >
        </activity>

        <!-- Add Product Activity -->

        <activity
            android:name=".NoviKorisnikActivity"
            android:label="Registracija" >
        </activity>

        <activity
            android:name=".NoviOglasActivity"
            android:label="Novi oglas" >
