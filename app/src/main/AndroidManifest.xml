        <activity
            android:name=".NoviOglas2Activity"
            android:label="Novi oglas" >
        </activity>

        <activity
            android:name=".NoviOglas3Activity"
            android:label="Novi oglas" >
        </activity>

        <activity
            android:name=".TraziVoznjeActivity"
            android:label="Pretraga vožnji" >
