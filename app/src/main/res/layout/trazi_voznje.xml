<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:weightSum="3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent_material_light"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pretraga vožnji"
            android:id="@+id/textView14"
            android:layout_gravity="left|bottom"
            android:textSize="34sp"
            android:textColor="@color/bright_foreground_inverse_material_light"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/bright_foreground_inverse_material_light"
            android:elevation="8dp">

            <EditText
                style="@style/MyFont"
                android:id="@+id/traziMjestoTxt"
                android:hint="Mjesto polaska"
                android:layout_marginTop="30dp" />

            <EditText
                style="@style/MyFont"
                android:id="@+id/traziOdredisteTxt"
                android:hint="Odredište"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                style="@style/MyButton"
                android:text="Traži"
                android:id="@+id/traziBtn"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/material_deep_teal_500"
                android:textColor="@color/primary_material_light"
                android:alpha="1" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>